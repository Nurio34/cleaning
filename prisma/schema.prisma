generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id          String  @id @default(cuid())
  name        String
  email       String?
  question    String
  answer      Answer?
  createdAt   DateTime  @default(now())
}

model Answer {
  id          String @id  @default(cuid())
  description String
  questionId  String @unique
  question    Question  @relation(fields: [questionId],references: [id] , onDelete: Cascade)
  createdAt   DateTime  @default(now())
}